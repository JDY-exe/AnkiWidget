<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_marginBottom="24dp" />

        <!-- Theme Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme_label"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/theme_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/theme_material_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_material_you"
                android:checked="true" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/theme_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_github" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/theme_monochrome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_monochrome" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/theme_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom Colors" />

        </RadioGroup>

        <!-- Custom Color Inputs -->
        <LinearLayout
            android:id="@+id/custom_colors_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Completed Color (Hex)"
                android:layout_marginBottom="8dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/color_completed_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="#FF0000" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Incomplete Color (Hex)"
                android:layout_marginBottom="8dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/color_incomplete_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="#550000" />
            </com.google.android.material.textfield.TextInputLayout>
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Background Color (Hex)"
                android:layout_marginBottom="8dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/color_background_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="#000000" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Show Streak Toggle -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/show_streak_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_streak_label"
            android:layout_marginBottom="8dp" />

        <!-- Frosted Glass Toggle -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/frosted_glass_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transparent Background"
            android:layout_marginBottom="24dp" />

        <!-- Deck Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Deck"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/deck_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minHeight="48dp" />

        <!-- Widget Preview -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/preview_background"
            android:layout_marginBottom="24dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="Widget preview" />

        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_button"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
